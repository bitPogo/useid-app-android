# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.kt]
charset = utf-8

# 4 space indentation
[*.kt]
indent_style = space
indent_size = 4

# Max line length
[*.kt]
max_line_length=off
